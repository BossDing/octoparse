.maxParse{
    margin: 0 5px;
    font-family: Helvetica,sans-serif;
    font-size: 28rpx;
    color: #666;
    line-height: 1.8;
}
view{
    word-break:break-all; overflow:auto;
}
.maxParse-inline{
    display: inline;
    margin: 0;
    padding: 0;
}
/*//标题 */
.maxParse-div{margin: 0;padding: 0;}
.maxParse-h1{ font-size:2em; margin: .67em 0 }
.maxParse-h2{ font-size:1.5em; margin: .75em 0 }
.maxParse-h3{ font-size:1.17em; margin: .83em 0 }
.maxParse-h4{ margin: 1.12em 0}
.maxParse-h5 { font-size:.83em; margin: 1.5em 0 }
.maxParse-h6{ font-size:.75em; margin: 1.67em 0 }

.maxParse-h1 {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: .9em;
}
.maxParse-h2 {
  font-size: 16px;
  font-weight: 400;
  margin-bottom: .34em;
}
.maxParse-h3 {
  font-weight: 400;
  font-size: 15px;
  margin-bottom: .34em;
}
.maxParse-h4 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: .24em;
}
.maxParse-h5 {
  font-weight: 400;
  font-size: 13px;
  margin-bottom: .14em;
}
.maxParse-h6 {
  font-weight: 400;
  font-size: 12px;
  margin-bottom: .04em;
}

.maxParse-h1, .maxParse-h2, .maxParse-h3, .maxParse-h4, .maxParse-h5, .maxParse-h6, .maxParse-b, .maxParse-strong  { font-weight: bolder }

.maxParse-i,.maxParse-cite,.maxParse-em,.maxParse-var,.maxParse-address{font-style:italic}
.maxParse-pre,.maxParse-tt,.maxParse-code,.maxParse-kbd,.maxParse-samp{font-family:monospace}
.maxParse-pre{white-space:pre}
.maxParse-big{font-size:1.17em}
.maxParse-small,.maxParse-sub,.maxParse-sup{font-size:.83em}
.maxParse-sub{vertical-align:sub}
.maxParse-sup{vertical-align:super}
.maxParse-s,.maxParse-strike,.maxParse-del{text-decoration:line-through}
/*maxParse-自定义个性化的css样式*/
/*增加video的css样式*/
.maxParse-strong,.maxParse-s{display: inline}
.maxParse-a{
    color: deepskyblue;
    word-break:break-all;
    overflow:auto;
}

.maxParse-video{
    text-align: center;
    margin: 10px 0;
}

.maxParse-video-video{
    width:100%;
}

.maxParse-img{
    /*background-color: #efefef;*/
    overflow: hidden;
}

.maxParse-blockquote {
    margin: 0;
    padding:10px 0 10px 5px;
    font-family:Courier, Calibri,"宋体";
    background:#f5f5f5;
    border-left: 3px solid #dbdbdb;
}

.maxParse-code,.maxParse-wxxxcode-style{
    display: inline;
    background:#f5f5f5;
}
.maxParse-ul{
    margin: 20rpx 10rpx;
}

.maxParse-li,.maxParse-li-inner{
    display: flex;
    align-items: baseline;
    margin: 10rpx 0;
}
.maxParse-li-text{
    
    align-items: center;
    line-height: 20px;
}

.maxParse-li-circle{
    display: inline-flex;
    width: 5px;
    height: 5px;
    background-color: #333;
    margin-right: 5px;
}

.maxParse-li-square{
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    background-color: #333;
    margin-right: 5px;
}
.maxParse-li-ring{
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    border: 2rpx solid #333;
    border-radius: 50%;
    background-color: #fff;
    margin-right: 5px;
}

