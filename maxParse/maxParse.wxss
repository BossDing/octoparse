.maxParse-u {
  text-decoration: underline;
}
.maxParse-hide{
    display: none;
}
.WxEmojiView{
    align-items: center;
}
.wxEmoji{
    width: 16px;
    height:16px;
}
.maxParse-tr{
	display: flex;
	border-right:1px solid #e0e0e0;
	border-bottom:1px solid #e0e0e0;
	border-top:1px solid #e0e0e0;
}
.maxParse-th,
.maxParse-td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	border-left:1px solid #e0e0e0;
	word-break: break-all;
}
.maxParse-td:last{
	border-top:1px solid #e0e0e0;
}
.maxParse-th{
	background:#f0f0f0;
	border-top:1px solid #e0e0e0;
}
.maxParse-del{
    display: inline;
}
.maxParse-figure {
  overflow: hidden;
}
